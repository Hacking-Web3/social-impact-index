{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2017"],
    "sourceMap": true,
    "allowJs": false,
    "declarationMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types", "helpers/types"],
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "jsx": "react-jsxdev",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "~~/*": ["./src/*"]
    }
  },
  "include": ["src", "src/helpers/__global.ts", "vite.config.ts"],
  "exclude": [
    "**/node_modules",
    ".husky",
    "./src/styles/css",
    "./tailwind.config.js",
    "node_modules",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ]
}
